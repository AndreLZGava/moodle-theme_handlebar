{{!
    @template theme_handlebar/studentmodal

    Handlebar Student blocks modal display.

    Context variables required for this template:
        * hasstulinksgroup
        * title
        * icon
        * stulinksgroup
        * name
        * url

    Example context (json):
    {
        'hasstulinksgroup' => array('title' => "group title", 'title' => "fa-icon-name")
        'stulinksgroup' => array('name' => "link name", 'url' => "http://link/here")
    }
}}
<div class="modalcards">
<div class="card modalcards_progress">
    {{#progresschart}}
        {{{progresschart}}}
        <p>My Progress</p>
    {{/progresschart}}
    <a href="#" alt="my grades"><i class="fa fa-4x fa-bar-chart">&nbsp</i><br>My Grades</a>
</div>
{{#hasstulinksgroup}}
    <div class="card">
        <div class="card-header card-primary">
            <h3 class="card-title">
                <i class="fa fa-{{{icon}}}">&nbsp</i>{{{title}}}
            </h3>
        </div>
        <div class="card-block">
            <ul class="list-group">
                {{#stulinksgroup}}
                    <li class="list-group-item">
                        <a href="{{{url}}}" alt="{{{name}}}">{{{name}}}</a>
                    </li>
                {{/stulinksgroup}}
            </ul>
        </div>
    </div>
{{/hasstulinksgroup}}
</div>
